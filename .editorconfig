root = true

[*.{adoc, bat, groovy, html, java, js, jsp, kt, kts, md, properties, py, rb, sh, sql, svg, txt, xml, xsd, yml, yaml}]
charset = utf-8

[*.{groovy, java, kt, kts, xsd}]
indent_style = space
indent_size = 4
end_of_line = lf

[*.{js, html}]
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{sql, xml}]
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true


[*.{yml,yaml}]
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true

[*.java]
ij_java_doc_do_not_wrap_if_one_line = false
